<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:orientation="vertical">
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/purple_700"
              android:layout_marginTop="20dp"
              android:text="Email:" android:textSize="24sp"/>
    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:inputType="textEmailAddress"
              android:id="@+id/text_email"
              android:text=""
              android:layout_marginTop="8dp"/>
    <TextView android:layout_width="wrap_content"
              android:textColor="@color/purple_700"
              android:layout_height="wrap_content"
              android:text="Password:"
              android:layout_marginTop="16dp" android:textSize="24sp"/>
    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/text_password"
              android:layout_marginTop="8dp"
              android:text=""
              android:inputType="textPassword"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="287dp" android:orientation="horizontal" android:layout_margin="10dp">
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/submit_btn"
                android:layout_marginTop="16dp"
                android:text="@string/sign_in"
                android:onClick="sign_click"/>
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signup_btn"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:text="@string/sign_up"
                android:onClick="signUp_click"/>
        <CheckBox android:layout_width="wrap_content"
                  android:id="@+id/remember_check"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="10dp"
                  android:layout_height="wrap_content"
                  android:text="save account"
        />
    </LinearLayout>


</LinearLayout>

    

